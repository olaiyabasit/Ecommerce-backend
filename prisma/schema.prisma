generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id         Int         @default(autoincrement()) @id
  name       String      @unique
  products   Products[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Product {
  id           Int         @default(autoincrement()) @id
  name         String
  description  String?
  
}
